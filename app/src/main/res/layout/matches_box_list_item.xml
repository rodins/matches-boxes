<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="matchesBox"
            type="com.sergeyrodin.matchesboxes.util.MatchesBoxQuantity" />

        <variable
            name="clickListener"
            type="com.sergeyrodin.matchesboxes.matchesbox.list.MatchesBoxListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="@{() -> clickListener.onClick(matchesBox.id)}">

        <TextView
            android:id="@+id/box_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{matchesBox.name}"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            tools:text="Matches box text is here" />

        <TextView
            android:id="@+id/box_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{matchesBox.componentsQuantity}"
            android:textSize="24sp"
            tools:text="14"
            />
    </LinearLayout>

</layout>